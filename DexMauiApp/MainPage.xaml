<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            x:Class="DexMauiApp.MainPage">

    <VerticalStackLayout 
        Padding="20" 
        Spacing="15"
        VerticalOptions="Center">

        <Label 
            Text="Send DEX" 
            FontSize="32" 
            HorizontalOptions="Center" />

        <Button 
            Text="Send Machine A" 
            Clicked="OnSendMachineAClicked" />

        <Button 
            Text="Send Machine B" 
            Clicked="OnSendMachineBClicked" />

        <Label 
            x:Name="ResultLabel" 
            FontSize="16" 
            TextColor="Green"/>

    </VerticalStackLayout>
</ContentPage>